        <script>
            // Отримуємо всі кнопки відкриття
const openButtons = document.querySelectorAll('.index-open-btn');
const closeButtons = document.querySelectorAll('.index-close-btn');

// Додаємо події для кожної кнопки відкриття
openButtons.forEach(button => {
    button.addEventListener('click', () => {
        const targetId = button.getAttribute('data-target'); // Отримуємо ID потрібного контейнера
        const container = document.getElementById(targetId);
        if (container) {
            container.style.display = 'flex';
        }
    });
});

// Додаємо події для кнопок закриття
closeButtons.forEach(button => {
    button.addEventListener('click', () => {
        const container = button.parentElement;
        container.style.display = 'none';
    });
});

        </script>

